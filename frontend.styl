body
  margin 0

#app
  max-width 1000px
  background #fefeff
  padding 10px 50px
  margin 0 auto
  button
    cursor pointer

trash_button(size)
  button
    position absolute ; font-size size
    color #a00 ; background #fff8f8 ; border none
    visibility hidden
  &:hover button
    visibility visible

.bffp
  > div:first-child
    trash_button(3em)
h1
  text-align center ; margin 0 auto
  font 3em sans-serif ; max-width 600px
  &:empty:before { content:"BFFP" ; color: #eee }

.claim
  position relative
  > div:first-child
    trash_button(2em)
h2
  font 2em sans-serif
  margin-left 40px
  &:empty:before { content:"Claim" ; color: #eee }


